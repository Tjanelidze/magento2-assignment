<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="before.body.end">
            <block ifconfig="chat_api_credentials/settings/enabled"
                   class="Dotdigitalgroup\Chat\Block\Virtual"
                   name="ddg.chat.tag"
                   template="Dotdigitalgroup_Chat::include.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="chatData" xsi:type="array">
                                <item name="component" xsi:type="string">Dotdigitalgroup_Chat/js/chatData</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
