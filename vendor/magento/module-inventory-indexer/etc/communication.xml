<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Communication/etc/communication.xsd">
    <topic name="inventory.indexer.sourceItem" is_synchronous="false" request="int[]">
        <handler name="inventory.indexer.sourceItem.handler" type="Magento\InventoryIndexer\Indexer\SourceItem\Strategy\Sync" method="executeList" />
    </topic>
    <topic name="inventory.indexer.stock" is_synchronous="false" request="int[]">
        <handler name="inventory.indexer.stock.handler" type="Magento\InventoryIndexer\Indexer\Stock\Strategy\Sync" method="executeList" />
    </topic>
    <topic name="inventory.reservations.updateSalabilityStatus" is_synchronous="false" request="Magento\InventoryIndexer\Model\Queue\ReservationData">
        <handler name="inventory.reservations.updateSalabilityStatus.handler" type="Magento\InventoryIndexer\Model\Queue\UpdateIndexSalabilityStatus" method="execute" />
    </topic>
</config>
