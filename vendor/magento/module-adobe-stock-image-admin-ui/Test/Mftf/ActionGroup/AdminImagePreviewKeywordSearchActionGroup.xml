<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminImagePreviewKeywordSearchActionGroup">
        <arguments>
            <argument name="keyword" type="string"/>
        </arguments>
        <seeElement selector="{{AdminAdobeStockImagePreviewSection.keyword(keyword)}}" stepKey="seeKeyword"/>
        <click selector="{{AdminAdobeStockImagePreviewSection.keyword(keyword)}}" stepKey="clickOnKeyword"/>
        <waitForPageLoad stepKey="waitPageLoad"/>
    </actionGroup>
</actionGroups>
