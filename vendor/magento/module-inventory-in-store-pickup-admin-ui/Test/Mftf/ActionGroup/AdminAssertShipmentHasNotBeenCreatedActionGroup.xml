<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminAssertShipmentHasNotBeenCreatedActionGroup">
        <annotations>
            <description>Verify error message on admin order page.</description>
        </annotations>

        <waitForElement selector="{{AdminOrderDetailsMainActionsSection.errorMsg}}" stepKey="waitForMessage"/>
        <see selector="{{AdminOrderDetailsMainActionsSection.errorMsg}}" userInput="The order is not ready for pickup" stepKey="verifyOrderHasNotBeenCrated"/>
    </actionGroup>
</actionGroups>
