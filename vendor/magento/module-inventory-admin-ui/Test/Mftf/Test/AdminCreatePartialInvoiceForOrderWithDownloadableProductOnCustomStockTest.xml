<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminCreatePartialInvoiceForOrderWithDownloadableProductOnCustomStockTest" extends="AdminCreatePartialInvoiceForOrderWithDownloadableProductOnDefaultStockTest">
        <annotations>
            <stories value="Downloadable product Custom Stock"/>
            <title value="Creat Partial Invoice with Downloadable Product on Custom Stock."/>
            <description value="Admin user create partial invoice for whole order with downloadable product on custom stock"/>
            <testCaseId value="https://app.hiptest.com/projects/69435/test-plan/folders/735234/scenarios/2583168"/>
            <severity value="CRITICAL"/>
            <group value="msi"/>
            <group value="multi_mode"/>
        </annotations>

        <before>
            <!--Create additional stock and link additional source to stock.-->
            <createData entity="BasicMsiStockWithMainWebsite1" stepKey="additionalStock" after="additionalSource"/>
            <createData entity="SourceStockLinked1" stepKey="sourceStockLink" after="additionalStock">
                <requiredEntity createDataKey="additionalStock"/>
                <requiredEntity createDataKey="additionalSource"/>
            </createData>
            <remove keyForRemoval="assignMainWebsiteToDefaultStock"/>
        </before>
        <after>
            <!--Assign Default Stock to Default Website.-->
            <actionGroup ref="AssignWebsiteToStockActionGroup" stepKey="assignMainWebsiteToDefaultStock" after="disableSource">
                <argument name="stockName" value="{{_defaultStock.name}}"/>
                <argument name="websiteName" value="{{_defaultWebsite.name}}"/>
            </actionGroup>
            <deleteData createDataKey="additionalStock" after="logoutOfAdmin" stepKey="deleteStock"/>
        </after>

        <!--Assign downloadable product to additional source.-->
        <actionGroup ref="AssignSourceToProductActionGroup" stepKey="assignTestSourceToCreatedProduct" after="openProductEditPage">
            <argument name="sourceCode" value="$$additionalSource.source[source_code]$$"/>
        </actionGroup>
        <fillField selector="{{AdminProductSourcesGrid.rowQty('1')}}" userInput="100" stepKey="setCustomSourceQuantity" after="assignTestSourceToCreatedProduct"/>
        <!--Verify product quantity.-->
        <remove keyForRemoval="checkProductSourceQtyAfterInvoice"/>
        <remove keyForRemoval="checkSalableQtyAfterInvoice"/>
        <see selector="{{AdminProductGridSection.productQtyPerSource('1', $$additionalSource.source[name]$$)}}" userInput="95" stepKey="checkProductSourceQtyAfterInvoice"/>
        <see selector="{{AdminProductGridSection.productSalableQty('1', $$additionalStock.stock[name]$$)}}" userInput="90" stepKey="checkSalableQtyAfterInvoice"/>
    </test>
</tests>
