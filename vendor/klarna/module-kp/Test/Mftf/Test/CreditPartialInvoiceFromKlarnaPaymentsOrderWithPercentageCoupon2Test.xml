<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="CreditPartialInvoiceFromKlarnaPaymentsOrderWithPercentageCoupon2Test" extends="PlaceKlarnaPaymentsOrderWithTwoOfSameProductTest">
        <annotations>
            <features value="Klarna Payments"/>
            <stories value="Partially credit/refund an invoice from an order with two of the same product + a percentage coupon"/>
            <title value="Partially credit invoice with two of the same product and % coupon"/>
            <description value="A merchant can partially credit/refund a Klarna Payments order with two of the same product and a percentage coupon"/>
            <severity value="CRITICAL"/>
            <testCaseId value="KP_CM_9"/>
            <group value="Klarna_KP_Country_US"/>
            <group value="Klarna_KP_Order_Guest"/>
            <group value="Klarna_KP_Order_Pay_Later"/>
            <group value="Klarna_KP_Order_Credit"/>
        </annotations>
        <before>
            <actionGroup ref="ConfigurePercentageCoupon" stepKey="configurePercentageCoupon">
                <argument name="ruleName" value="CatPriceRule"/>
                <argument name="couponCode" value="CatPriceRule.coupon_code"/>
            </actionGroup>
        </before>
        <after>
            <actionGroup ref="DeleteCartPriceRuleByName" stepKey="deleteCartPriceRule" before="logout">
                <argument name="ruleName" value="{{CatPriceRule.name}}"/>
            </actionGroup>
        </after>
        <!--Remove step for adding product to cart-->
        <remove keyForRemoval="addToCartFromStorefrontProductPage"/>

        <!--Add product to shopping cart then go to cart and apply coupon-->
        <actionGroup ref="ApplyCartRuleOnStorefrontWithProductQuantityActionGroup" stepKey="addToCartAndApplyCartRule" before="goToCheckoutFromMinicart">
            <argument name="product" value="$$createSimpleProduct$$"/>
            <argument name="productQty" value="2"/>
            <argument name="couponCode" value="{{CatPriceRule.coupon_code}}"/>
        </actionGroup>

        <!--Parent test places order...-->

        <!--Create and go to invoice-->
        <actionGroup ref="AdminCreateInvoiceActionGroup" stepKey="createInvoice"/>
        <actionGroup ref="GoToFirstInvoiceInOrderInvoiceTabActionGroup" stepKey="goToInvoice"/>

        <!--Fill in and submit credit memo - It credits a quantity of 1 by default-->
        <actionGroup ref="CreateAndSubmitCreditMemoActionGroup" stepKey="createAndSubmitCreditMemo"/>

        <!--Assert successful credit memo creation-->
        <actionGroup ref="AssertSuccessfulCreditMemoCreationAndAmountsActionGroup" stepKey="assertSuccessfulCreditMemoCreation">
            <argument name="expectedGrandTotal" value="$12.21"/>
            <argument name="expectedRefundTotal" value="$6.10"/>
        </actionGroup>
    </test>
</tests>
