<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="ValidateAdminKlarnaOrderSummaryWithShipping">
        <arguments>
            <argument name="shippingAmount" type="string"/>
        </arguments>

        <scrollTo selector="{{AdminOrderTotalSection.shippingAndHandling}}" stepKey="scrollToOrderTotalSection"/>
        <waitForElementVisible selector="{{AdminOrderTotalSection.shippingAndHandling}}" stepKey="waitForElementToBeVisible"/>
        <see userInput="{{shippingAmount}}" selector="{{AdminOrderTotalSection.shippingAndHandling}}" stepKey="seeShippingAndHandling"/>
    </actionGroup>
</actionGroups>
