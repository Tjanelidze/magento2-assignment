<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="VertexAdminUpdateShippingAddressWithSuggestionsActionGroup">
        <annotations>
            <description>Click the "Update Address" button displayed under a Vertex Address Suggestion for the shipping address</description>
        </annotations>

        <click stepKey="clickButton" selector="{{AdminOrderFormShippingAddressSection.UpdateAddressButton}}"/>
        <waitForLoadingMaskToDisappear stepKey="waitForAddressUpdate"/>
    </actionGroup>
</actionGroups>
